import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-->0){
		    int a =sc.nextInt();
		    int b =sc.nextInt();
		    int units= Math.min(a,b/2);
		int juice=units*3;
		System.out.println(juice);
		     
		     }

	}
}

