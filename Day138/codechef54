import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int count =0;
		for(int i=1;i<=n;i++) {
		    if(i%2!=0)
		      count++;
		}
		System.out.println(count);

	}
}

