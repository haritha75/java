import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
        
        int R = sc.nextInt();
        int B = sc.nextInt();
        int P = sc.nextInt();
        int Q = sc.nextInt();
        
        if(R*P > B*Q ){
            System.out.println(R*P);
        }
        else{
            System.out.println(B*Q);
        }

	}
}

