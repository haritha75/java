import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while(t-->0)
        {
            int a = sc.nextInt(),b = sc.nextInt(), x = sc.nextInt(), y = sc.nextInt();
            int t9r = a/x;
            System.out.println(a+b+t9r*(y-x));
        }
	}
}
