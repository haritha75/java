import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
        
        // Number of test cases
        int T = sc.nextInt();
        
        while (T-- > 0) {
            // Read N and K
            int N = sc.nextInt();
            int K = sc.nextInt();
            
            int[] prices = new int[N];
            
            // Read prices
            for (int i = 0; i < N; i++) {
                prices[i] = sc.nextInt();
            }
            
            // Sort prices in descending order
            Arrays.sort(prices);
            
            // Sum K most expensive items
            int totalCost = 0;
            for (int i = N - 1; i >= N - K; i--) {
                totalCost += prices[i];
            }
            
            System.out.println(totalCost);
        }

	}
}
