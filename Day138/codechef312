import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
        int T = sc.nextInt();

        while (T-- > 0) {
            int W = sc.nextInt();
            int P = sc.nextInt(); // not needed in calculation
            int K = sc.nextInt();

            int wood = Math.min(W, K);  // take max wooden chairs possible
            int stylishness = K + wood; // formula: K + wooden chairs

            System.out.println(stylishness);
        }

	}
}

