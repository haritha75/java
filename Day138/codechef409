import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0)
		{
		    int x=sc.nextInt();int count=0;int max=0;
		    for(int i=0;i<x;i++)
		    {
		        int y=sc.nextInt();
		        
		        if(y>max)
		        {
		            max=y;
		            count=i+1;
		        }
		    }System.out.println(count);
		}

	}
}
