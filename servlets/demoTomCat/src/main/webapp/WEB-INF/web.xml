<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>hello-servlet</servlet-name>
        <servlet-class>com.example.demotomcat.HelloServlet</servlet-class>
<!--        servlet name our choice and path of the file-->
    </servlet>
    <servlet-mapping>
        <servlet-name>hello-servlet</servlet-name>
<!--        servlet mention here we are mapping that file and servlet-->
        <url-pattern>/hello-servlet</url-pattern>
<!--        here we have to mention url of the servlet this file with in the folder-->
    </servlet-mapping>

</web-app>